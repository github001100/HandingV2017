<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparent"
    android:orientation="vertical"
    tools:context="com.hdmes.handingv2017.ContactActivity"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitle"
        app:srcCompat="@mipmap/title_contact" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="扫一扫，关注我们！"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="0.04"
        app:srcCompat="@drawable/handingongzh" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:background="@drawable/round_button_contact"
        android:drawableLeft="@mipmap/phone"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:text="联系我们" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/wechat"
        android:paddingLeft="105dp"
        android:text="  jackysword   twofly0"
        android:textColor="@color/colorText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorText"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:drawableLeft="@mipmap/qq"
        android:paddingLeft="105dp"
        android:text="  517717648" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/phone_red"
        android:paddingLeft="105dp"
        android:layout_marginTop="10dp"
        android:text="  17603798068"
        android:textColor="@color/colorText"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        android:text="handingtech@handingtech.cn" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        android:text="中国洛阳老城区唐宫东路256号" />

</LinearLayout>
